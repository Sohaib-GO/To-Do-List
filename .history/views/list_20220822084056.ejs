<!DOCTYPE html>
<html lang="en">
<head>    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>To-Do-List</title>
    
    <!-- font-awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.2/css/all.min.css"
    />
    <!-- Custom CSS -->
    <link rel="stylesheet" href="css/styles.css" />

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script> 


    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Alegreya+Sans+SC:wght@100&family=Montserrat:wght@700&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Exo:400,700">

</head>

  <body>
    <!-- Animated Background -->
    <div class="area">
      
      <ul class="circles">
<!-- The To-Do-List  -->
        <div>
          <!-- DropDown Menu -->
          <div class="box flex-container" id="heading ">

            <div class="btn-group dropstart ">      
              <button type="button" class="btn btn-secondary  DropMenu " data-bs-toggle="dropdown" aria-expanded="false"> 
                <i class="fas fa-bars fa-lg tab tab-btn" aria-hidden="true"></i>

              </button>
              
              <ul class="dropdown-menu">
                <li> <!-- Button trigger modal -->
                  <button type="button" class="myButton btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
                      new
                    </button>
                  </li>

                          </ul>
            </div>
            <h1 class="flex2"><%= DayofTheWeek %></h1>
          
          </div>
      
          <div class="box ">
            <% newListItems.forEach(function(item) { %>
      
            <form action="/delete" method="post" class="oewe" >
              <div class="item ">
                <label class="fancy-checkbox ">
                <input
                class="deleteButton"
                  type="checkbox"
                  name="checkedItem"
                  value="<%=item._id%>"
                  onChange="this.form.submit()"
                />
                <i class="fa-solid fa-xmark deleteButton"></i>        
              </label>
                <input type="hidden" name="ListNameCust" value="<%=DayofTheWeek%>" />
      
                <p><%= item.name %></p>
              </div>
            </form>
            <% }) %>
      
            <form class="item oriForm" action="/" method="post">
              <input type="text" name="newItem" placeholder="New Item" />
      
              <button class="add" type="submit" name="list" value="<%= DayofTheWeek %>">+</button>
            </form>

          
          </div>
      
          </div>
          <div id="mainCirc">
        <li class="circ1"></li>
        <li class="circ2"></li>
        <li class="circ3"></li>
        <li class="circ4"></li>
        <li class="circ5"></li>
        <li class="circ6"></li>
        <li class="circ7"></li>
        <li class="circ8"></li>
        <li class="circ9"></li>
        <li class="circ10"></li>
      </div>
      
</ul>



</div>
  <!-- Modal -->
  <div class="modal fade" id="exampleModal" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">New list name</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </button>
        </div>
        <form action="/newList" method="post">
          <div class="modal-body">
            <div class="form-group">
              <input type="text" name="newListName" class="newList form-control" placeholder="keep it short" id="newList" autocomplete="off" required pattern="^(?!\s*$).+">
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="  btn btn-secondary myButton" data-bs-dismiss="modal">Close</button>
            <button type="submit" class="myButton main ripple">Create</button>
              </div>
        </form>
      </div>

    </div>
  </div>



  
</div>


  <footer> <i class="fa-brands fa-github contact-item"></i>
  </i></footer>

  </body>


</html>
